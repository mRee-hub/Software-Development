@model GoTicket.Models.Admin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login Page</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {

            @Html.LabelFor(model => model.admin_username, "Username")
            <br />
            @Html.TextBoxFor(model => model.admin_username, "", new { @class = "form-control", @placeholder = "Admin Username" })

            <br />

            @Html.LabelFor(model => model.admin_password, "Password")
            <br />
            @Html.TextBoxFor(model => model.admin_password, "", new { @class = "form-control", @placeholder = "Admin Password" })

            <br />
            <input type="submit" name="submit" class="btn btn-primary" value="Login" />

            if (ViewData["HataMesaji"] != null)
            {
                <div class="text-danger">@ViewData["HataMesaji"]</div>
            }
        }
    </div>
</body>
</html>


