
@model IEnumerable<GoTicket.Models.Registration>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <h2>Müşteri Listesi</h2>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Email</th>
            <th>Password</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.customer_id</td>
                <td>@item.customer_fname</td>
                <td>@item.customer_lname</td>
                <td>@item.customer_pnumber</td>
                <td>@item.customer_address</td>
                <td>@item.customer_email</td>
                <td>@item.customer_password</td>
                <td><a href="/Admin/DeleteCustomer/@item.customer_id" class="btn btn-danger">Delete</a></td>
                <td><a href="/Admin/TakeCustomerInfo/@item.customer_id" class="btn btn-warning">Update</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/NewCustomer" class="btn btn-primary">New Customer</a>
</body>
</html>
