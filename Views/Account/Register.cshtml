@model GoTicket.Models.Registration

@{
    ViewBag.Title = "RegisterPage";
    Layout = "~/Views/Shared/Layout2.cshtml";

}
<head>
    <style>
        body {
            background-image: url(https://nypost.com/wp-content/uploads/sites/2/2023/04/best-july-travel.gif);
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .prlogin9 {
            width: 100%;
            max-width: 400px;
            border: 2px solid #c1c1c1;
            border-radius: 40px;
            margin: 0 auto;
            margin-top: 15%;
            padding: 25px 25px 25px 25px;
            font: 14px/130% 'Roboto', sans-serif;
            background: #fff;
        }

            .prlogin9 .prloginic {
                width: 100%;
            }

                .prlogin9 .prloginic .prloginforgot {
                    width: 100%;
                    text-align: right;
                    padding: 5px;
                }

                    .prlogin9 .prloginic .prloginforgot a {
                        text-decoration: none;
                        color: #666;
                    }

        .header {
            font-size: 25px;
            font-weight: normal;
            line-height: 25px;
            text-align: center;
            margin-bottom: 15px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        .prloginbox {
            margin-top: 10px;
        }

            .prloginbox label {
                text-align: left;
                display: grid;
                margin-left: 30px;
                margin-right: 30px;
                margin-bottom: 8px;
                max-width: 400px;
                width: 100%;
            }

            .prloginbox input {
                width: 100%;
                padding: 15px 20px;
                background: #f1f1f9;
                border-radius: 18px;
                border: 2px solid #c1c1c1;
                outline: none;
                transition: all .25s ease;
            }

                .prloginbox input:focus {
                    border-color: #f04747;
                }

        .prbtn {
            background: #f04747 !important;
            color: #fff !important;
            cursor: pointer;
            border: 0 !important;
            font-weight: bold;
            margin-left: 20px;
            margin-right: 20px;
            max-width: 300px;
            width: 100%;
        }

            .prbtn:hover {
                box-shadow: 0 10px 30px 0 rgb(240 71 71 / 70%);
            }
    </style>
</head>
<body>



    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="prlogin9">
            <div class="prloginic">
                <h1 class="header"> <i> Register </i> </h1>
                <div class="prloginbox">
                    <label for="CFirstName">
                        <i style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans'; font:italic; font-size:large">
                            @Html.LabelFor(model => model.customer_fname, " First Name")
                            @Html.TextBoxFor(model => model.customer_fname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.customer_fname)
                        </i>
                    </label>

                </div>

                <div class="prloginbox">
                    <label for="CLastName">
                        <i style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans'; font:italic; font-size:large">
                            @Html.LabelFor(model => model.customer_lname, "Last Name")
                            @Html.TextBoxFor(model => model.customer_lname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.customer_lname)
                        </i>
                    </label>

                </div>
                <div class="prloginbox">
                    <label for="CPhoneNumber">
                        <i style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans'; font:italic; font-size:large">
                            @Html.LabelFor(model => model.customer_pnumber, "Phone Number")
                            @Html.TextBoxFor(model => model.customer_pnumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.customer_pnumber)
                        </i>
                    </label>

                </div>
                <div class="prloginbox">
                    <label for="CAdress">
                        <i style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans'; font:italic; font-size:large">
                            @Html.LabelFor(model => model.customer_address, "Adress")
                            @Html.TextBoxFor(model => model.customer_address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.customer_address)
                        </i>
                    </label>

                </div>
                <div class="prloginbox">
                    <label for="CEmail">
                        <i style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans'; font:italic; font-size:large">
                            @Html.LabelFor(model => model.customer_email, "Email")
                            @Html.TextBoxFor(model => model.customer_email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.customer_email)
                        </i>
                    </label>

                </div>
                <div class="prloginbox">
                    <label for="CPassword">
                        <i style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans'; font:italic; font-size:large">
                            @Html.LabelFor(model => model.customer_password, " Password")
                            @Html.PasswordFor(model => model.customer_password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.customer_password)
                        </i>
                    </label>

                </div>

            </div>
            <br />
            <div class="prloginbox">
                <input type="submit" value="Register" class="prbtn" />
            </div>

        </div>

    }
</body>