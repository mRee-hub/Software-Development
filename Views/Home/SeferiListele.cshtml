@model IEnumerable<GoTicket.Models.Vehicle>

@{
    ViewBag.Title = "SeferiListele";
}
<head>
    <style>
        body {
            background-image: url(https://nypost.com/wp-content/uploads/sites/2/2023/04/best-july-travel.gif);
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .prlogin9 {
            width: 100%;
            max-width: 400px;
            border: 2px solid #c1c1c1;
            border-radius: 40px;
            margin: 0 auto;
            margin-top: 15%;
            padding: 25px 25px 25px 25px;
            font: italic;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            background: #fff;
        }

            .prlogin9 .prloginic {
                width: 100%;
            }

                .prlogin9 .prloginic .prloginforgot {
                    width: 100%;
                    text-align: right;
                    padding: 5px;
                }

                    .prlogin9 .prloginic .prloginforgot a {
                        text-decoration: none;
                        color: #666;
                    }

        .header {
            font-size: 25px;
            line-height: 25px;
            text-align: center;
            margin-bottom: 15px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans';
            font: italic;
        }

        .prloginbox {
            margin-top: 10px;
            margin-bottom: 10px;
        }

            .prloginbox label {
                text-align: left;
                display: grid;
                margin-left: 30px;
                margin-right: 30px;
                margin-bottom: 8px;
                max-width: 400px;
                width: 100%;
            }

            .prloginbox input {
                width: 100%;
                padding: 15px 15px;
                background: #f1f1f9;
                border-radius: 15px;
                border: 2px solid #c1c1c1;
                outline: none;
                transition: all .25s ease;
            }

                .prloginbox input:focus {
                    border-color: #f04747;
                }

        .prbtn {
            background: #f04747 !important;
            color: #fff !important;
            cursor: pointer;
            border: 0 !important;
            font-weight: bold;
            margin-left: 20px;
            margin-right: 20px;
            max-width: 300px;
            width: 100%;
        }

            .prbtn:hover {
                box-shadow: 0 10px 30px 0 rgb(240 71 71 / 70%);
            }
    </style>
</head>


<body>

    @Html.AntiForgeryToken()

    <div class="prlogin9">
        <div class="prloginic">
            <h1 class="header">
                <div class="prloginbox">
                    <label for="password">
                        <i style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans'; font:italic; font-size:large">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.vehicle_type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vehicle_condition)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vehicle_attribute)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.departure_location)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.arrival_location)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.arrival_date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.departure_date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.total_amount)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vehicle_type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vehicle_condition)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vehicle_attribute)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.departure_location)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.arrival_location)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.arrival_date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.departure_date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.total_amount)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Satın Al", "Odeme", "Ticket", new { id = item.vehicle_id }, null)
                                    </td>
                                </tr>
                            }
                        </i>
                    </label>
                </div>
            </h1>
        </div>
    </div>

</body>
