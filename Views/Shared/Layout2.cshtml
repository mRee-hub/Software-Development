<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .bar {
            display: block;
            color: black;
            text-align: center;
            padding: 14px 16px;
            margin: 4px;
            float: left;
            border-bottom: 6px solid green;
            font-style: italic;
        }

        .admin {
            display: block;
            color: black;
            text-align: center;
            padding: 14px 16px;
            margin: 4px;
            float: right;
            border-bottom: 6px solid green;
            font-style: italic;
        }
    </style>
</head>



@{ var İsim = TempData["İsim"] as string;
                var Soyisim = TempData["Soyisim"] as string; }
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul>
                    <li class="bar">
                        @Html.ActionLink("GoTicket", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="bar">
                        @Html.ActionLink("Ticket Query", "GetTicketInfo", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserID"] != null)
                    {
        <li class="bar">
            @Html.ActionLink("Log Out", "Logout", "Account")
        </li>
                        <li>
                            <p class="navbar-text">@İsim @Soyisim</p>
                        </li> }
                                    else
                                    {
                        <li class="bar">@Html.ActionLink("Log In", "Login", "Account")</li>
                                        <li class="bar">@Html.ActionLink("Register", "Register", "Account")</li>
                                        <li class="admin">@Html.ActionLink("Admin", "Login", "Admin")</li>}
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>